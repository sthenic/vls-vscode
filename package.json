{
    "name": "vls-vscode",
    "description": "A Verilog IEEE 1364-2005 language server client.",
    "author": "Marcus Eriksson",
    "license": "MIT",
    "type": "module",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/sthenic/vls-vscode"
    },
    "publisher": "sthenic",
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:verilog",
        "onLanguage:systemverilog"
    ],
    "main": "./out/extension",
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/vscode": "1.43.0",
        "vscode-test": "^1.3.0",
        "@types/mocha": "^5.2.7",
        "mocha": "^6.2.2",
        "@types/node": "^12.12.0",
        "eslint": "^6.4.0",
        "@typescript-eslint/parser": "^2.3.0",
        "typescript": "^3.8.3"
    },
    "contributes": {
        "languages": [
            {
                "id": "verilog",
                "aliases": [
                    "Verilog",
                    "verilog"
                ],
                "extensions": [
                    ".v",
                    ".vh",
                    ".vl"
                ],
				"configuration": "./verilog.configuration.json"
            },
            {
                "id": "systemverilog",
                "aliases": [
                    "System Verilog",
                    "systemverilog"
                ],
                "extensions": [
                    ".sv",
                    ".SV"
                ],
				"configuration": "./systemverilog.configuration.json"
            }
        ],
        "grammars": [
			{
				"language": "verilog",
				"scopeName": "source.verilog",
				"path": "./syntaxes/verilog.tmLanguage"
			},
			{
				"language": "systemverilog",
				"scopeName": "source.systemverilog",
				"path": "./syntaxes/systemverilog.tmLanguage"
			}
        ],
        "configuration": {
            "type": "object",
            "title": "Verilog Language Server Configuration",
            "properties": {
                "vls.path": {
                    "scope": "window",
                    "type": "string",
                    "default": "vls",
                    "description": "The path to the VLS executable."
                },
                "vls.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    }
}
